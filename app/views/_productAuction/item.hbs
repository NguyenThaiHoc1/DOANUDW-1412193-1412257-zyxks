            title: 'Confirm',
            message: 'You sure to post Comment: ' + userName,
            buttons: [{
                  label: 'Close',
                  action: function(dialog){
                      dialog.close();
                  }
            },
            {
                  label: 'OK',
                  cssClass: 'btn-primary',
                  action: function(dialog) {
                      $.ajax({
